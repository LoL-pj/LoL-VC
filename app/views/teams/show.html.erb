<div class="row">
  <div class="col s12 m5">
    <div class="card blue-grey darken-1">
      <ul class="collection">
      <li class="collection-item avatar">
        <img src="images/yuna.jpg" alt="" class="circle">
        <br>
        <span class="title">
          <strong><%= t(:title) %></strong><br>
          <%= @team.title %>
        </span>
        <span class="summoner_name"><br>
          <strong><%= t(:summoner_name) %></strong><br>
          <%= @team.summoner_name %>
        </span>
        <span class="game_type"><br>
          <strong><%= t(:game_type) %></strong><br>
          <%= @team.game_type %>
        </span>
        <span class="discord"><br>
          <strong><%= t(:discord) %></strong><br>
          <%= @team.discord %>
        </span>
          <span class="skype"><br>
            <strong><%= t(:skype) %></strong><br>
            <%= @team.skype %>
        </span>
        <span class="body"><br>
          <strong><%= t(:body) %></strong><br>
          <%= @team.body %>
        </span>
        <div class="card-action">
          <%= link_to"編集", edit_team_path %>
          <%= link_to"削除", @team, method: :delete %>
        </div>
      </li>
      </ul>
    </div>
  </div>
</div>