.row
  .col.s12.m5
    .card.blue-grey.darken-1
      %ul.collection
        %li.collection-item.avatar
          %img.circle{:alt => "", :src => "images/yuna.jpg"}/
          %br/
          %span.title
            %strong= t(:title)
            %br/
            = @team.title
          %span.summoner_name
            %br/
            %strong= t(:summoner_name)
            %br/
            = @team.summoner_name
          %span.game_type
            %br/
            %strong= t(:game_type)
            %br/
            = @team.game_type
          %span.discord
            %br/
            %strong= t(:discord)
            %br/
            = @team.discord
          %span.skype
            %br/
            %strong= t(:skype)
            %br/
            = @team.skype
          %span.body
            %br/
            %strong= t(:body)
            %br/
            = @team.body
          .card-action
            = link_to"編集", edit_team_path
            = link_to"削除", @team, method: :delete
